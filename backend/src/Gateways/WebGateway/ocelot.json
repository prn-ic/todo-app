{
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:7080"
    },
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/cards/id/{id}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "cards-api",
                    "Port": 8080
                }
            ],
            "UpstreamPathTemplate": "/cards/id/{id}",
            "UpstreamHttpMethod": [
                "Get", "Delete"
            ]
        },
        {
            "DownstreamPathTemplate": "/api/cards",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "cards-api",
                    "Port": 8080
                }
            ],
            "UpstreamPathTemplate": "/cards",
            "UpstreamHttpMethod": [
                "Get", "Post", "Put"
            ]
        }
    ]
}